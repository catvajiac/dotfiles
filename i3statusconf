# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
  colors = true
  interval = 5
  color_good      = '#58b828'
  color_degraded  = '#ccdc90'
  color_bad       = '#e13123'
}

#order += "ipv6"
order += "disk /"
order += "run_watch VPN"
order += "wireless _first_"
order += "battery 0"
order += "volume master"
#order += "load"
order += "cpu_usage"
order += "tztime local"

wireless _first_ {
  #format_up = "%quality   %essid %ip "
  format_up = " %quality %essid %ip "
  format_down = "(down)"
}

ethernet _first_ {
  # if you use %speed, i3status requires root privileges
  format_up = "E: %ip (%speed)"
  format_down = "E: down"
}

battery 0 {
  format = "%status %percentage %remaining "
  status_chr = "chr"
  status_bat = "bat"
  status_full = "full"
}

run_watch DHCP {
  pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
  pidfile = "/var/run/vpnc/pid"
  format = "vpn"
}

tztime local {
  #format = "  %A %e %B    %H:%M:%S"
  format = " %A %e %B %H:%M:%S "
}

load {
  #format = "  %1min"
  format = " %1min "
}

cpu_usage {
  #format = "  %usage"
  format = " %usage "
}


disk "/" {
  #format = "  %avail"
  format = "  %avail "
  prefix_type = custom
}

volume master {
  #format = "♪: %volume " 
  #format_muted = "♪: (%volume) " 
  format = " %volume " 
  format_muted = " (%volume) " 
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}
