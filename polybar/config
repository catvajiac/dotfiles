;   To learn more about how to configure Polybar
;   go to https://github.com/jaagr/polybar
;
;   The README contains alot of information
;
;=====================================================

[global/wm]
margin-top = 5
margin-bottom = 5


[bar/bar]
monitor = LVDS1
width = 100%
height = 20
offset-x = 0
offset-y = 0
fixed-center = true

background = #252525
foreground = #ffffff
warning = #f5a70a

overline-size = 0
overline-color = #151515
underline-size = 0
underline-color = #151515

border-bottom-size = 0
border-bottom-color = #333

padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0

font-0 = tamzen:pixelsize=14

modules-left = i3
modules-center = xwindow
modules-right = volume space3 memory space3 cpu space3 temperature space3 wlan space3 date1 space3 date2 battery space1

tray-padding = 10
tray-detached = false
tray-offset-y = 0
tray-maxsize = 16
tray-transparent = true

[module/xwindow]
type = internal/xwindow
label-maxlen = 90

format-prefix = " "
format-suffix = " "
format-foreground = #cd96e5

[module/i3]
type = internal/i3
format = <label-state>
index-sort = true
pin-workspaces = true

label-focused = %index%
label-focused-background = ${xrdb:color15:#353535}
label-focused-foreground = ${xrdb:color15:#65aaca}
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-background = ${root.background}
label-unfocused-foreground = ${root.foreground}
label-unfocused-padding = 1

label-urgent = %index%!
label-urgent-background = ${root.warning}
label-urgent-foreground = ${root.foreground}
label-urgent-padding = 1

label-visible = %index%
label-visible-background = ${root.background}
label-visible-foreground = #55
label-visible-padding = 1


[module/cpu]
type = internal/cpu
interval = 3
label = %percentage%%

format-foreground = #af8787


[module/memory]
type = internal/memory
interval = 3
label = %gb_free%

format-foreground = #20af75


[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 65
interval = 3

format-foreground = #65aaca
label-warn-foreground = #f4b085

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3

label-connected = %essid%
label-connected-foreground = #81a500
label-disconnected = %ifname%
label-disconnected-foreground = #f4b085


[module/eth]
type = internal/network
interface = enp1s0f0
interval = 3

label-connected = %local_ip%
label-connected-foreground = #81a500
label-disconnected = %ifname%
label-disconnected-foreground = #f4b085


[module/date1]
type = custom/script
exec = date +%H:%M
click-left = pkill -USR1 redshift
scroll-up = light -A 5
scroll-down = light -U 5
interval = 60

format-foreground = #cd96e5


[module/date2]
type = custom/script
exec = date +"%a, %b %d"
click-left = gsimplecal
interval = 60

format-foreground = #cd96e5

[module/volume]
type = internal/volume

master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default
master-mixer = Master

speaker-mixer = Speaker
headphone-mixer = Headphone
headphone-id = 9

mapped = true

format-volume-foreground = #ff0000
#label-muted-foreground = #66
label-volume-foreground = #ff0000
bar-volume-indicator-foreground = #af8787


[module/battery]
type = internal/battery
battery = BAT0
adapter = AC0
full-at = 97

format-charging = chr <label-charging>
format-charging-foreground = #65aaca
format-charging-prefix = "   "
format-discharging = bat <label-discharging>
format-discharging-foreground = #65aaca
format-discharging-prefix = "   "
format-full = full
format-full-foreground = #65aaca
format-full-prefix = "   "


[module/space1]
type = custom/text
content = " "


[module/space2]
type = custom/text
content = "  "


[module/space3]
type = custom/text
content = "   "

; vim:ft=dosini
