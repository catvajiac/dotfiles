[global/wm]
margin-top = 5
margin-bottom = 5

[bar/bar]
monitor = LVDS1
width = 100%
height = 20
fixed-center = true

background = #252525
foreground = #ffffff
warning = #f5a70a

padding-left = 0
padding-right = 2
module-margin-left = 2
module-margin-right = 1

font-0 = tamzen:pixelsize=14

modules-left = i3
modules-center = xwindow
modules-right = vpn volume memory cpu temperature wlan time date battery 

[bar/bar2]
monitor = HDMI1
width = 100%
height = 20
fixed-center = true

background = #252525
foreground = #ffffff
warning = #f5a70a

padding-left = 0
padding-right = 2
module-margin-left = 2
module-margin-right = 1

font-0 = tamzen:pixelsize=14

modules-left = i3
modules-center = xwindow
modules-right = vpn volume memory cpu temperature wlan time date battery 

[module/xwindow]
type = internal/xwindow
label-maxlen = 90
format-foreground = #cd96e5

[module/i3]
type = internal/i3
format = <label-state>
index-sort = true
pin-workspaces = true

label-focused = %index%
label-focused-background = #353535
label-focused-foreground = #65aaca
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-padding = 1

label-urgent = %index%
label-urgent-background = #cd96e5
label-urgent-foreground = #ffffff
label-urgent-padding = 1

label-visible = %index%
label-visible-foreground = #55
label-visible-padding = 1

[module/vpn]
type = custom/script
exec = echo vpn
exec-if = pgrep openconnect
interval = 5
format-foreground = #81a500

[module/cpu]
type = internal/cpu
interval = 3
label = %percentage%%
format-foreground = #af8787

[module/memory]
type = internal/memory
interval = 3
label = %gb_free%
format-foreground = #20af75

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 65
interval = 3
format-foreground = #65aaca
label-warn-foreground = #f4b085

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3
label-connected = %essid%
label-connected-foreground = #81a500
label-disconnected = down
label-disconnected-foreground = #f4b085

[module/eth]
type = internal/network
interface = enp1s0f0
interval = 3
label-connected = %local_ip%
label-connected-foreground = #81a500
label-disconnected = %ifname%
label-disconnected-foreground = #f4b085

[module/time]
type = custom/script
exec = date +%H:%M
click-left = pkill -USR1 redshift
scroll-up = light -A 5
scroll-down = light -U 5
interval = 60
format-foreground = #cd96e5

[module/date]
type = custom/script
exec = date +"%a, %b %d"
click-left = gsimplecal
interval = 60

format-foreground = #cd96e5

[module/volume]
type = internal/volume

master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default
master-mixer = Master
speaker-mixer = Speaker
headphone-mixer = Headphone
headphone-id = 9
mapped = true
format-volume-foreground = #ff0000
#label-muted-foreground = #66
label-volume-foreground = #ff0000
bar-volume-indicator-foreground = #af8787

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC0
full-at = 97

format-charging = chr <label-charging>
format-charging-foreground = #65aaca
format-discharging = bat <label-discharging>
format-discharging-foreground = #65aaca
format-full = full
format-full-foreground = #65aaca
; vim:ft=dosini
